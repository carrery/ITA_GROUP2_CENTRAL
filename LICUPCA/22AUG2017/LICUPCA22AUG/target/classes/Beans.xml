<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
   http://www.springframework.org/schema/aop 
   http://www.springframework.org/schema/aop/spring-aop-3.0.xsd ">

	<aop:config>
		<aop:aspect id="eqlog" ref="equationLogging">
			<aop:pointcut id="selectAllEq"
				expression="execution(* com.oocl.licupca.misc.ws.eq.Equation.*(..))" />

			<aop:before pointcut-ref="selectAllEq" method="beforeAdvice" />
			<aop:after pointcut-ref="selectAllEq" method="afterAdvice" />
			<aop:after-returning pointcut-ref="selectAllEq"
				returning="retVal" method="afterReturningAdvice" />

			<aop:after-throwing pointcut-ref="selectAllEq"
				throwing="ex" method="AfterThrowingAdvice" />
		</aop:aspect>
	</aop:config>


	<!-- Definition for calculation bean -->
	<bean id="equation" class="com.oocl.licupca.misc.ws.eq.Equation">
		<property name="x" value="1" />
		<property name="operator" value="+" />
		<property name="y" value="2" />
	</bean>

	<!-- Definition for calculation logging aspect -->
	<bean id="equationLogging" class="com.oocl.licupca.misc.logging.EquationLogging" />


</beans>